<Window x:Class="Dialogs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dialogs"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <StackPanel>
        <Button x:Name="MessageBoxSample" Click="MessageBoxSample_Click">MessageBoxSample</Button>
        <Button x:Name="OpenFileDialogSample" Click="OpenFileDialogSample_Click">OpenFileDialogSample</Button>
        <Button x:Name="OpenFileDialogMultipleFilesSample" Click="OpenFileDialogMultipleFilesSample_Click">OpenFileDialogMultipleFilesSample</Button>
        <Button x:Name="SaveFileDialogSample" Click="SaveFileDialogSample_Click">SaveFileDialogSample</Button>
        <Button x:Name="InputDialogAppSample" Click="InputDialogAppSample_Click">InputDialogAppSample</Button>
    </StackPanel>
</Window>
