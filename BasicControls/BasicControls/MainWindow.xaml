<Window x:Class="BasicControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/> 
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Button x:Name="TextBlockSampleButton" Click="TextBlockSampleButton_Click">TextBlockSample</Button>
            <Button x:Name="TextBlockInlineFormattingSampleButton" Click="TextBlockInlineFormattingSampleButton_Click">TextBlockSample</Button>
            <Button x:Name="LabelControlSampleButton" Click="LabelControlSampleButton_Click">LabelControlSample</Button>
            <Button x:Name="TextBoxControlSampleButton" Click="TextBoxControlSampleButton_Click">TextBoxControlSample</Button>
            <Button x:Name="ButtonControlSampleButton" Click="ButtonControlSampleButton_Click">ButtonControlSample</Button>
            <Button x:Name="CheckBoxControlSampleButton" Click="CheckBoxControlSampleButton_Click">CheckBoxControlSample</Button>
        </StackPanel>
    </Grid>
</Window>
