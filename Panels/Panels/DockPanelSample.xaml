<Window x:Class="Panels.DockPanelSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panels"
        mc:Ignorable="d"
        Title="DockPanelSample" Height="250" Width="250"
        WindowStartupLocation="CenterScreen">
    <!-- The DockPanel makes it easy to dock content in all four directions (top, bottom, left and right) -->
    <!-- This makes it a great choice in many situations, where you want to divide the window into specific areas -->
    <DockPanel>
        <!-- the last element, unless feature disabled, will automatically fill the remaining space -->
        <!-- turn off the LastChildFill property -->
        <DockPanel.LastChildFill>False</DockPanel.LastChildFill>
        
        <Button DockPanel.Dock="Top" Height="30" Content="Top"/>
        <Button DockPanel.Dock="Bottom" Height="50" Content="Bottom"/>
        <Button DockPanel.Dock="Left" Width="50" Height="20" Content="Left"/>
        <Button DockPanel.Dock="Right" Content="Right"/>
        <Button DockPanel.Dock="Left" Content="Left" Width="50"/>
        <Button DockPanel.Dock="Right" Content="Right" Width="50"/>
    </DockPanel>
</Window>
