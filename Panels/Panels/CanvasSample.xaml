<Window x:Class="Panels.CanvasSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panels"
        mc:Ignorable="d"
        Title="CanvasSample" Height="200" Width="200"
        WindowStartupLocation="CenterScreen">
    <Canvas>
        <Button>Button 1</Button>
        <Button>Button 2</Button>

        <Button Canvas.Left="10" Canvas.Top="30">Left 10 Top 30</Button>
        <Button Canvas.Right="10">Right 10</Button>
        <Button Canvas.Right="10" Canvas.Bottom="20">Right 10 Bottom 20</Button>
        <Button Canvas.Bottom="10">Bottom 10</Button>
    </Canvas>
</Window>
