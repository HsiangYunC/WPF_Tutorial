<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <StackPanel>
        <Button x:Name="HelloBoundWorldSampleButton" Click="HelloBoundWorldSampleButton_Click">HelloBoundWorldSample</Button>
        <Button x:Name="DataContextSampleButton" Click="DataContextSampleButton_Click">DataContextSample</Button>
        <Button x:Name="CodeBehindBindingsSampleButton" Click="CodeBehindBindingsSampleButton_Click">CodeBehindBindingsSample</Button>
        <Button x:Name="ChangeNotificationSampleButton" Click="ChangeNotificationSampleButton_Click">ChangeNotificationSample</Button>
        <Button x:Name="ConverterSampleButton" Click="ConverterSampleButton_Click">ConverterSample</Button>
        <Button x:Name="StringFormatSampleButton" Click="StringFormatSampleButton_Click">StringFormatSample</Button>
    </StackPanel>
</Window>
