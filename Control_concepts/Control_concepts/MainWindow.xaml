<Window x:Class="Control_concepts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Control_concepts"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Button x:Name="ToolTipsSimpleSampleButton" Click="ToolTipsSimpleSampleButton_Click">ToolTipsSimpleSample</Button>
            <Button x:Name="ToolTipsAdvancedSampleButton" Click="ToolTipsAdvancedSampleButton_Click">ToolTipsAdvancedSample</Button>
            <Button x:Name="TextFormattingModeSampleButton" Click="TextFormattingModeSampleButton_Click">TextFormattingModeSample</Button>
            <Button x:Name="TextRenderingModeSampleButton" Click="TextRenderingModeSampleButton_Click">TextRenderingModeSample</Button>
            <Button x:Name="TabOrderSampleButton" Click="TabOrderSampleButton_Click">TabOrderSample</Button>
        </StackPanel>
    </Grid>
</Window>
